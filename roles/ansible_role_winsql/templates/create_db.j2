DECLARE @dbName NVARCHAR(128);
SET @dbName = '{{ dbName }}';

CREATE DATABASE [@dbName]
ON PRIMARY
(
    NAME = @dbName + '_Data',
    FILENAME = '{{ drive_mapping.data }}:\\' + @dbName + '_data.mdf',
    SIZE = 10MB,
    MAXSIZE = 100MB,
    FILEGROWTH = 5MB
)
LOG ON 
(
    NAME = @dbName + '_Log',
    FILENAME = '{{ drive_mapping.logs }}:\\' + @dbName + '_log.ldf',
    SIZE = 5MB,
    MAXSIZE = 50MB,
    FILEGROWTH = 2MB
);

BACKUP DATABASE @dbName
TO DISK = '{{ drive_mapping.data }}:\' + @dbName + '.bak';

BACKUP LOG @dbName
TO DISK = '{{ drive_mapping.logs }}:\' + @dbName + '.log';